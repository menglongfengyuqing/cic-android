<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/activity_base"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/pic_recharge_fail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="出借失败！"
        android:textColor="@color/yellow"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/bt_again_investment"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bt_red"
        android:text="再试一次"
        android:textColor="@color/textColorWhite"
        android:textSize="21sp"/>

    <TextView
        android:id="@+id/tv_see_my_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_again_investment"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="返回查看我的账户"
        android:textColor="@color/investment_detail_text"
        android:textSize="15sp"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="*市场有风险，出借需谨慎"
            android:textColor="#c7c7c7"
            android:textSize="12sp"/>
    </RelativeLayout>

</LinearLayout>