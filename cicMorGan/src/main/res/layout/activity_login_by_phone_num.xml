<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_close_by_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_close"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/pic_logo"/>

    <com.ztmg.cicmorgan.view.ClearEditText
        android:id="@+id/et_phone_by_phone"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="73dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:singleLine="true"
        android:textColor="@color/text_333333"
        android:textColorHint="@color/register_text_color"
        android:textSize="17sp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp">

        <EditText
            android:id="@+id/et_phone_code"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:imeOptions="actionDone"
            android:textColor="@color/text_333333"
            android:textColorHint="@color/register_text_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_send_phone_code_by_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="@color/text_a11c3f"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc"/>

    <Button
        android:id="@+id/bt_login_by_phone"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bt_red"
        android:text="同意协议并登录"
        android:textColor="@color/textColorWhite"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/bt_register_by_phone"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bt_red_line_36"
        android:text="注册领600元红包"
        android:textColor="@color/text_d40f42"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_login_by_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:layout_marginRight="15dp"
        android:text="密码登录"
        android:textColor="@color/text_34393c"
        android:textSize="13sp"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ll_agreeage_by_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:gravity="center_horizontal"
        android:text="查看用户协议"
        android:textColor="@color/text_34393c"
        android:textSize="13sp" />
</RelativeLayout>



</LinearLayout>