<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_write_upgrade"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="进行风险测评"
            android:textColor="@color/text_34393c"
            android:textSize="21sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:text="便于我们为您推荐更加适合的产品"
            android:textColor="@color/text_34393c"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_red_hollow_dialog_version"
                android:gravity="center"
                android:text="再想想"
                android:textColor="@color/text_d40f42"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:layout_marginLeft="34dp"
                android:background="@drawable/bt_red"
                android:gravity="center"
                android:text="去测评"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>