<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_integral_rule">


        <RelativeLayout
            android:id="@+id/rl_addredss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/mRelativeLayout">

            <TextView
                android:id="@+id/tv_addressee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="dddddd"
                android:textColor="@color/text_34393c"
                android:textSize="15sp"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tv_addressee_name"
                android:text="dddddddddddd"
                android:textColor="@color/text_34393c"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_shipping_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_addressee_name"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:text="ddddddddddddddddddddddddd"
                android:textColor="@color/text_34393c"
                android:textSize="14sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp">

            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:background="@color/text_cccccc"/>

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="编辑"
                android:textColor="@color/text_989898"
                android:textSize="13sp"/>
        </RelativeLayout>

    </RelativeLayout>


