<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include layout="@layout/activity_base" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text=""
        android:textColor="@color/investment_detail_text"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_marginTop="2dp"
        android:background="@color/white" >

        <EditText
            android:id="@+id/et_bank_phone_code"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:background="@null"
            android:hint="请输入手机验证码"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/investment_detail_text"
            android:textColorHint="@color/investment_detail_text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_bank_get_phone_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_bank_new_pas"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:background="@null"
            android:hint="请输入新密码"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/investment_detail_text"
            android:textColorHint="@color/investment_detail_text"
            android:textSize="17sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/bt_bank_submit"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="62dp"
            android:background="@drawable/bt_red"
            android:text="提交"
            android:textColor="@color/textColorWhite"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="*市场有风险，出借需谨慎"
            android:textColor="#c7c7c7"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>