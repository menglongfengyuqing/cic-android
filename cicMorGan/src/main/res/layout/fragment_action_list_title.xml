<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_goods_more"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="6dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="@color/text_cbb693"
            android:gravity="center_vertical"/>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_view"
            android:gravity="center_vertical"
            android:text="积分商城"
            android:textColor="@color/text_34393c"
            android:textSize="17sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/enter"
            android:gravity="center_vertical"
            android:text="更多"
            android:textColor="@color/text_989898"
            android:textSize="14sp">
        </TextView>
    </RelativeLayout>

    <com.ztmg.cicmorgan.view.HorizontalListView
        android:id="@+id/hl_lv"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_marginRight="15dp"
        android:visibility="gone">
    </com.ztmg.cicmorgan.view.HorizontalListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_integral_second10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    android:background="@drawable/pic_mall_shadow"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_integral_second12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pic_mall_coupon_10yuan"
                        android:scaleType="centerCrop"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_integral_second_name12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxEms="9"
                    android:text="10元抵用券"
                    android:textColor="@color/text_34393c"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_integral_second_use12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textColor="@color/text_a11c3f"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:textColor="@color/text_a11c3f"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_integral_second20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    android:background="@drawable/pic_mall_shadow"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_integral_second1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pic_mall_coupon_20yuan"
                        android:scaleType="centerCrop"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_integral_second_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxEms="9"
                    android:text="20元抵用券"
                    android:textColor="@color/text_34393c"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_integral_second_use1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="380"
                        android:textColor="@color/text_a11c3f"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:textColor="@color/text_a11c3f"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll__mi_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    android:background="@drawable/pic_mall_shadow"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_integral_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pic_mall_xiaomipower"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_integral_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxEms="9"
                    android:text="小米移动电源"
                    android:textColor="@color/text_34393c"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_integral_first_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1500"
                        android:textColor="@color/text_a11c3f"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:textColor="@color/text_a11c3f"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mi_mouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    android:background="@drawable/pic_mall_shadow"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_integral_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pic_mall_xiaomimouse"
                        android:scaleType="centerCrop"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_integral_second_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxEms="9"
                    android:text="小米便携鼠标"
                    android:textColor="@color/text_34393c"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_integral_second_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2400"
                        android:textColor="@color/text_a11c3f"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:textColor="@color/text_a11c3f"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/text_view1"
            android:layout_width="6dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="@color/text_cbb693"
            android:gravity="center_vertical"/>


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_view1"
            android:gravity="center_vertical"
            android:text="核心企业"
            android:textColor="@color/text_34393c"
            android:textSize="17sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="提供项目付款保障"
            android:textColor="@color/text_989898"
            android:textSize="14sp"
            android:visibility="gone">
        </TextView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_mth_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:background="@drawable/pic_mth_logo"
        android:visibility="gone"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/hl_core_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:scrollbars="none"/>

    <ImageView
        android:id="@+id/iv_no_data_look_more"
        android:layout_width="224dp"
        android:layout_height="102dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/pic_mall_enterprise_moretocome"
        android:scaleType="fitXY"
        android:visibility="gone">
    </ImageView>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/text_f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_shield"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="海口联合农商银行存管已接入  资金受监管"
                android:textColor="@color/text_989898"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_risk_hints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="*市场有风险，出借需谨慎"
            android:textColor="@color/text_989898"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>