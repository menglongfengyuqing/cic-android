<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_close"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/pic_logo"/>

    <com.ztmg.cicmorgan.view.ClearEditText
        android:id="@+id/et_phone"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="73dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:singleLine="true"
        android:textColor="@color/text_333333"
        android:textColorHint="@color/register_text_color"
        android:textSize="17sp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp">

        <com.ztmg.cicmorgan.view.ClearEditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:hint="请输入密码"
            android:imeOptions="actionDone"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/text_333333"
            android:textColorHint="@color/register_text_color"
            android:textSize="17sp"/>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/iv_eyes_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pic_pas"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc"/>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bt_red"
        android:text="同意协议并登录"
        android:textColor="@color/textColorWhite"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bt_red_line_36"
        android:text="注册领600元红包"
        android:textColor="@color/text_d40f42"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/ll_agreeage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="查看用户协议"
        android:textColor="@color/text_34393c"
        android:textSize="13sp"/>


    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="忘记密码？"
        android:textColor="@color/text_34393c"
        android:textSize="13sp"/>

