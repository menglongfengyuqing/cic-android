<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/activity_base"/>

    <RelativeLayout
        android:id="@+id/rl_login_pas"
        android:layout_width="fill_parent"
        android:layout_height="61dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="115dp"
            android:text="修改登录密码"
            android:textColor="@color/text_34393c"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/pic_account_enter_no_write"
            />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc"/>

    <RelativeLayout
        android:id="@+id/rl_gesture_pas"
        android:layout_width="fill_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/tv_hand_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="115dp"
            android:text="修改手势密码"
            android:textColor="@color/text_34393c"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/pic_account_enter_no_write"

            />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc"/>

    <RelativeLayout
        android:id="@+id/rl_setting_hand_pas"
        android:layout_width="fill_parent"
        android:layout_height="61dp">

        <TextView
            android:id="@+id/tv_hands_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="启用手势密码"
            android:textColor="@color/text_34393c"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/bt_hand_pas"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/hand_open"
            android:padding="5dp"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc"/>

    <Button
        android:id="@+id/bt_exit"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="61dp"
        android:background="@drawable/bt_red_line"
        android:text="安全退出"
        android:textColor="@color/text_d40f42"
        android:textSize="17sp"
        />

</LinearLayout>