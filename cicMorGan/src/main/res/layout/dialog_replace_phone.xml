<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_unbind_card"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="解绑银行卡"
            android:textColor="@color/text_34393c"
            android:textSize="15dp"/>

        <View
            android:id="@+id/v_line"
            style="@style/common_small_line"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_replace_card"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="更换银行卡"
            android:textColor="@color/text_34393c"
            android:textSize="15dp"
            android:visibility="gone"
            />

        <View
            style="@style/common_small_line"/>

        <TextView
            android:id="@+id/tv_replace_phone"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="更换银行预留手机号"
            android:textColor="@color/text_34393c"
            android:textSize="15dp"/>

        <View style="@style/common_small_line"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_34393c"
            android:textSize="15dp"/>
    </LinearLayout>
</RelativeLayout>