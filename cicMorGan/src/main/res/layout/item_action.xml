<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#FFFFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/mRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pic_mall_shadow_activity">

        <com.ztmg.cicmorgan.view.RoundImageView
            android:id="@+id/iv_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_mall_defaultforactivity"/>

        <TextView
            android:id="@+id/txt_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pic_mall_shapeoncorner"
            android:gravity="center"
            android:text="进行中"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/bg_gray"
        android:visibility="gone"/>

</android.support.v7.widget.CardView>