<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/activity_base" />

    <EditText
        android:id="@+id/et_new_phone"
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:phoneNumber="true"
        android:background="@null"
        android:hint="请输入新手机号"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:singleLine="true"
        android:textColor="@color/text_34393c"
        android:textColorHint="@color/text_cccccc"
        android:textSize="15sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dp" >

        <EditText
            android:id="@+id/et_new_phone_code"
            android:layout_width="fill_parent"
            android:layout_height="61dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/text_34393c"
            android:textColorHint="@color/text_cccccc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_new_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="发送验证码"
            android:textColor="@color/blue"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_cccccc" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/bt_bind_phone_next"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_marginTop="61dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bt_red"
            android:text="绑定新手机"
            android:textColor="@color/textColorWhite"
            android:textSize="21sp" />

    </RelativeLayout>

</LinearLayout>